run = "npm start"
entrypoint = "src/server.js"
language = "nodejs"
modules = ["postgresql-16", "nodejs-20"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "npm start"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 35817
externalPort = 3000

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_modules/.bin:$PATH"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
